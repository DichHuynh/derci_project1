extends ../../layouts/default.pug

block main
  h1 Danh mục sản phẩm 

  .card-mb-3 
    .card-header Danh sách 
      .card-body
        .row 
          .col-8 
          .col-4 
            a(
              href="product-category/create"
              class="btn btn-primary"
            ) + Thêm mới
  .card.mb-3 
    .card-header Danh sách danh mục sản phẩm
    .card-body
      .row 
        .col-8
          //- Tạo form cập nhật ô trạng thái và ô id
          form(
            action=`/admin/product/change-multi?_method=PATCH`
            method="post"
            form-change-multi
          )
            .d-flex.align-items-start
              .form-group
                select(name="type" class="form-control")
                  option(disable selected) ------------
                  option(value="active") Hoạt động
                  option(value="inactive") Ngưng hoạt động
                  option(value="delete-all") Xóa tất cả
                  option(value="change-position") Thay đổi tất cả
              .form-group 
                input(
                  type="text",
                  name="ids",
                  value="",
                  class="form-control d-none"
                )
              button(type="submit"  class="btn-btn-primary") Áp dụng
  
      table(
        class= "table table-hover table-sm"
        checkbox-multi
      ) 
        thead 
          tr 
            th 
              input(type="checkbox" name="checkall")
            th STT 
            th Hình ảnh 
            th Tiêu đề
            th Vị trí
            th Trạng thái 
            th Hành động
        tbody
          each item, index in record  
            tr 
              td 
                input(type="checkbox" name="ids" value=item.id )
              td #{index + 1}
              td 
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="50px"
                )
              td #{item.title}
              td 
                input(
                  type="number"
                  name="position"
                  value=item.position
                  style="width: 50px"
                  min="1"
                )
              td 
                if(item.status =='active')
                  a(
                    href="javascript:" 
                    class="badge badge-success"
                    data-status= item.status 
                    data-id= item.id
                    button-change-status
                    ) hoạt động
                else 
                  a(
                    href="javascript:" 
                    data-status = item.status 
                    data-id = item.id
                    button-change-status
                    class="badge badge-danger") dừng hoạt động
              td 
                a(
                  href=`/admin/product-category/edit/${item.id}`
                  class="btn btn-warning btn-sm") Sửa
                a(
                  href=`/admin/product/detail/${item.id}`
                  class="btn btn-primary btn-sm") Chi tiết
                button(
                  class="btn btn-danger btn-sm ml-1"
                  data-id= item.id 
                  button-delete 
                  ) Xóa
  form(
    action=""
    method="POST"
    id="form-change-status"
    data-path="/admin/product-category/change-status"
  )
  script(src="/admin/js/product-category.js")