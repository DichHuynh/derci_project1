extends ../../layouts/default.pug

block main 
  h1 Trang sản phẩm

  .card.mb-3
    .card-header Bộ lọc và tìm kiểm 
    .card-body
      .row 
        .col-6
          each item in filterStatus 
            button(
              class=`btn btn-sm lm-1 btn-outline-success ${item.class}`
              button-status= item.status
            ) #{item.name}

        .col-6
          form(id="form-search")
            .input-group 
              input(
                type="text",
                placeholder="Nhập từ khóa",
                class="form-control",
                name="keyword",
                //- truyền tham số keyword cần tìm kiếm ở giao diện
                value = keyword 
              )
              .input-group-append 
                button(
                  type="submit",
                  class="btn btn-success"
                ) Tìm

      //- button(
      //-   class="btn btn-sm lm-1 btn-outline-success"
      //-   button-status="active"
      //- ) Hoạt động
      //- button(
      //-   class=`btn btn-sm lm-1 btn-outline-success`
      //-   button-status="inactive"
      //- ) Ngưng hoạt động

  .card.mb-3 
    .card-header Danh sách sản phẩm
    .card-body
      table.table.table-hover.table-sm 
        thead 
          tr 
            th STT 
            th Hình ảnh 
            th Tiêu đề
            th Giá
            th Trạng thái 
            th Hành động
        tbody
          each item, index in products 
            tr 
              td #{index + 1}
              td 
                img(
                  src="/images/anhmau.jpg"
                  alt=item.title
                  width="100px"
                  height="50px"
                )
              td #{item.title}
              td #{item.price}$
              td 
                if(item.status =='active')
                  a(
                    href="javascript:" 
                    class="badge badge-success"
                    data-status= item.status 
                    data-id= item.id
                    button-change-status
                    ) hoạt động
                else 
                  a(
                    href="javascript:" 
                    data-status = item.status 
                    data-id = item.id
                    button-change-status
                    class="badge badge-danger") dừng hoạt động
              td 
                button(class="btn btn-warning btn-sm") Sửa
                button(class="btn btn-danger btn-sm ml-1") Xóa

  //- thêm form để gửi lên phần thay đổi trạng thái sản phẩm
  form(
    action=""
    method="POST"
    id="form-change-status"
    data-path="/admin/product/change-status"
  )

  nav
    ul(class="pagination")
      if(pagination.currentPage > 1)
        li(class="page-item ")
        button(
          class="page-link"
          button-pagination=pagination.currentPage - 1
        ) Trang trước
      - for (var i = 1; i <= totalPage; i++)
        li(class=`page-item ${pagination.currentPage == i ? "active": ""}`)
          buton(
            class="page-link" 
            button-pagination=i
            ) #{i}
      if(pagination.currentPage < totalPage)
        li(class="page-item ")
        button(
          class="page-link"
          button-pagination=pagination.currentPage + 1
        ) Trang tiếp

    script(src="/admin/js/productScript.js")       
