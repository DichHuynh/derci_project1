extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
  +alert-error(5000)

  h1(class="mb-4") Chỉnh sửa sản phẩm

  form(
    action="/admin/product/create"
    method="post"
    id="from-edit-product"
	  )
    
    div(class="form-group")
      label(for="title") Tên sản phẩm
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
		  )
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="4"
		  )
    div(class="form-group")
      label(for="price") Giá
      input(
        type="number"
        class="form-control"
        id="price"
        name="price"
        min="0"
		  )
    div(class="form-group")
      label(for="discount") % Giảm giá
      input(
        type="number"
        class="form-control"
        id="discount"
        name="discountPercentage"
        min="0"
		)
    div(class="form-group")
      label(for="stock") Số lượng 
      input(
        type="number"
        class="form-control"
        id="stock"
        name="stock"
        min="0"
		)
    div(class="form-group")
      label(for="thumbnail") Ảnh 
      input(
        type="file"
        class="form-control"
        id="thumbnail"
        name="thumbnail"
		)
    div(class="form-group")
      label(for="posittion") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
		  )
    div(class="form-group form-check form-check-inline")
      input(
        class="form-check-input"
        type="radio"
        name="status"
        id="statusActive"
        value="active"
        checked 
			)
      label(for="statusActive" class="form-check-label") hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        class="form-check-input"
        type="radio"
        name="status"
        id="statusInActive"
        value="inactive"
        checked
		  )
      label(for="statusActive" class="form-check-label") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
        ) Tạo mới
  script(src="/admin/js/productScript.js")